server default {

    listen {
        type = auth
        ipaddr = *
        port = 1812
    }

    listen {
        type = acct
        ipaddr = *
        port = 1813
    }

    authorize {
        filter_username
        preprocess

        sql

        expiration
        logintime

        pap
    }

    authenticate {
        Auth-Type PAP {
            pap
        }
    }

    accounting {
        sql
    }

    session {
        sql
    }

    post-auth {
        sql

        Post-Auth-Type REJECT {
            sql
            attr_filter.access_reject
        }
    }
}
